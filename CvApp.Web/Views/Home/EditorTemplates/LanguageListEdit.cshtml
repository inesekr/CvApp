@using CvApp.Core.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model List<LanguageKnowledgeViewModel>

<div id="language-section">
    @for (var i = 0; i < Model.Count; i++)
    {
        @Html.HiddenFor(m => m[i].Id)
        <div class="mb-3">
            @Html.LabelFor(m => m[i].Language, "Language")
            @Html.TextBoxFor(m => m[i].Language, new {@class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m[i].LanguageLevel, "Language Level")
            <select asp-for="@Model[i].LanguageLevel" asp-items="Html.GetEnumSelectList<KnowledgeLevel>()">
                <option value="">Please select</option>
            </select>
            <button type="button" id="@Model[i].Id" class="btn btn-danger delete-language">Remove</button>
        </div>
    }
</div>